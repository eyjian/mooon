include $(top_srcdir)/Make.rules
AUTOMAKE_OPTIONS= foreign

INCLUDES   +=
LDADD      +=
AM_LDFLAGS  += -fPIC -shared -lm
AM_CXXFLAGS += -fPIC

libdir=$(prefix)/lib
lib_LIBRARIES = libutils.a
libutils_a_SOURCES = 

moduledir=$(prefix)/lib
module_PROGRAMS = libutils.so
libutils_so_SOURCES = 

install-data-hook:
	find $(prefix)/include/utils -name .svn |xargs rm -fr
	mkdir -p $(prefix)/include&&cp -r $(top_srcdir)/../include/utils $(prefix)/include/

uninstall-hook:
	rm -fr $(prefix)/include/utils
